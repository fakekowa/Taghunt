<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="TagHunt.Views.AccountSettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:TagHunt.Behaviors"
             xmlns:viewmodels="clr-namespace:TagHunt.ViewModels"
             x:DataType="viewmodels:AccountSettingsViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
             Title="Account Settings">

    <!-- Navigation Bar -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto"
              Padding="10,0"
              BackgroundColor="{StaticResource Primary}">
            
            <!-- Back Button -->
            <Button Grid.Column="0"
                    Text="â† Back"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderWidth="0"
                    Command="{Binding BackCommand}" />
            
            <!-- Title -->
            <Label Grid.Column="1"
                   Text="Account Settings"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
            
            <!-- Edit/Save Button -->
            <Button Grid.Column="2"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderWidth="0">
                <Button.Triggers>
                    <DataTrigger TargetType="Button"
                                 Binding="{Binding IsEditing}"
                                 Value="False">
                        <Setter Property="Text" Value="âœï¸ Edit" />
                        <Setter Property="Command" Value="{Binding EditProfileCommand}" />
                    </DataTrigger>
                    <DataTrigger TargetType="Button"
                                 Binding="{Binding IsEditing}"
                                 Value="True">
                        <Setter Property="Text" Value="ðŸ’¾ Save" />
                        <Setter Property="Command" Value="{Binding SaveProfileCommand}" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>
    </Shell.TitleView>

    <ScrollView VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,*"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            
            <!-- Safe Area Behavior -->
            <Grid.Behaviors>
                <behaviors:SafeAreaBehavior MinimumPadding="20" />
            </Grid.Behaviors>

            <!-- Profile Header Section -->
            <Border Grid.Row="0"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    StrokeShape="RoundRectangle 20"
                    StrokeThickness="0"
                    Margin="0,10,0,20">
                
                <StackLayout Padding="30"
                             Spacing="15">
                    
                    <!-- Avatar Section -->
                    <StackLayout HorizontalOptions="Center">
                        <Frame WidthRequest="100"
                               HeightRequest="100"
                               CornerRadius="50"
                               Padding="0"
                               BackgroundColor="White"
                               HasShadow="False"
                               BorderColor="Transparent">
                            
                            <Label Text="ðŸ‘¤"
                                   FontSize="50"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="{StaticResource Primary}" />
                        </Frame>
                        
                        <!-- Change Avatar Button -->
                        <Button Text="ðŸ“· Change Avatar"
                                FontSize="14"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                BorderColor="White"
                                BorderWidth="1"
                                CornerRadius="15"
                                Padding="15,8"
                                Margin="0,10,0,0"
                                Command="{Binding ChangeAvatarCommand}" />
                    </StackLayout>
                    
                    <!-- Online Status -->
                    <Grid ColumnDefinitions="Auto,*"
                          HorizontalOptions="Center">
                        <Ellipse Grid.Column="0"
                                 WidthRequest="12"
                                 HeightRequest="12"
                                 Fill="{Binding OnlineStatusColor}"
                                 VerticalOptions="Center" />
                        <Label Grid.Column="1"
                               Text="{Binding OnlineStatusText}"
                               FontSize="14"
                               TextColor="White"
                               Margin="8,0,0,0"
                               VerticalOptions="Center" />
                    </Grid>
                </StackLayout>
            </Border>

            <!-- Messages Section -->
            <StackLayout Grid.Row="1"
                         Margin="0,0,0,20"
                         IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}">
                <Border BackgroundColor="#FFE5E5"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0"
                        Padding="15">
                    <Label Text="{Binding ErrorMessage}"
                           FontSize="14"
                           TextColor="#D32F2F"
                           HorizontalOptions="Center" />
                </Border>
            </StackLayout>

            <StackLayout Grid.Row="2"
                         Margin="0,0,0,20"
                         IsVisible="{Binding SuccessMessage, Converter={StaticResource StringNotEmptyConverter}}">
                <Border BackgroundColor="#E8F5E8"
                        StrokeShape="RoundRectangle 10"
                        StrokeThickness="0"
                        Padding="15">
                    <Label Text="{Binding SuccessMessage}"
                           FontSize="14"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center" />
                </Border>
            </StackLayout>

            <!-- Profile Information Section -->
            <Border Grid.Row="3"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                    StrokeShape="RoundRectangle 15"
                    StrokeThickness="0"
                    Margin="0,0,0,20">
                
                <StackLayout Padding="20"
                             Spacing="20">
                    
                    <Label Text="Profile Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <!-- Display Name -->
                    <StackLayout Spacing="5">
                        <Label Text="Display Name"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                        
                        <Entry Text="{Binding DisplayName}"
                               FontSize="16"
                               IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               Placeholder="Enter your display name" />
                    </StackLayout>
                    
                    <!-- Username -->
                    <StackLayout Spacing="5">
                        <Label Text="Username"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                        
                        <Entry Text="{Binding Username}"
                               FontSize="16"
                               IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolConverter}}"
                               BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray800}}"
                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                               PlaceholderColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"
                               Placeholder="Enter your username" />
                    </StackLayout>
                    
                    <!-- Email (Read-only) -->
                    <StackLayout Spacing="5">
                        <Label Text="Email Address"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                        
                        <Entry Text="{Binding Email}"
                               FontSize="16"
                               IsReadOnly="True"
                               BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                               TextColor="{AppThemeBinding Light={StaticResource Gray700}, Dark={StaticResource Gray400}}" />
                    </StackLayout>
                    
                    <!-- Edit Actions (Only visible when editing) -->
                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="15"
                          IsVisible="{Binding IsEditing}">
                        
                        <Button Grid.Column="0"
                                Text="Cancel"
                                FontSize="16"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding CancelEditCommand}" />
                        
                        <Button Grid.Column="1"
                                Text="Save Changes"
                                FontSize="16"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="10"
                                HeightRequest="45"
                                Command="{Binding SaveProfileCommand}" />
                    </Grid>
                </StackLayout>
            </Border>

            <!-- Account Statistics Section -->
            <Border Grid.Row="4"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                    StrokeShape="RoundRectangle 15"
                    StrokeThickness="0">
                
                <StackLayout Padding="20"
                             Spacing="15">
                    
                    <Label Text="Account Information"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <!-- Account Created -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Label Grid.Column="0"
                               Text="ðŸ“…"
                               FontSize="18"
                               VerticalOptions="Center" />
                        <StackLayout Grid.Column="1"
                                     Margin="10,0,0,0">
                            <Label Text="Member Since"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                            <Label Text="{Binding FormattedCreatedAt}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        </StackLayout>
                    </Grid>
                    
                    <!-- Last Login -->
                    <Grid ColumnDefinitions="Auto,*">
                        <Label Grid.Column="0"
                               Text="ðŸ•’"
                               FontSize="18"
                               VerticalOptions="Center" />
                        <StackLayout Grid.Column="1"
                                     Margin="10,0,0,0">
                            <Label Text="Last Login"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                            <Label Text="{Binding FormattedLastLoginAt}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </Border>
        </Grid>
    </ScrollView>

    <!-- Loading Overlay -->
    <Grid IsVisible="{Binding IsBusy}"
          BackgroundColor="Black"
          Opacity="0.5"
          VerticalOptions="FillAndExpand"
          HorizontalOptions="FillAndExpand">
        
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                          Color="{StaticResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
    </Grid>
</ContentPage> 