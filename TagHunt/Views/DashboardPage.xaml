<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="TagHunt.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TagHunt.ViewModels"
             x:DataType="viewmodels:DashboardViewModel"
             Shell.NavBarIsVisible="True"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}"
             Title="Dashboard">

    <ScrollView VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
        
        <Grid RowDefinitions="Auto,Auto,Auto,*"
              Padding="20"
              RowSpacing="20"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            
            <!-- Welcome Header Section -->
            <Frame Grid.Row="0"
                   BackgroundColor="{StaticResource Primary}"
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="False">
                
                <StackLayout Spacing="10">
                    <Label Text="TagHunt Dashboard"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White" />
                    
                    <Label Text="{Binding WelcomeMessage}"
                           FontSize="18"
                           HorizontalOptions="Center"
                           TextColor="White"
                           Opacity="0.9" />
                    
                    <Label Text="{Binding UserDisplayName, StringFormat='User: {0}'}"
                           FontSize="16"
                           HorizontalOptions="Center"
                           TextColor="White"
                           Opacity="0.8" />
                </StackLayout>
            </Frame>

            <!-- Status Section -->
            <Frame Grid.Row="1"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="False">
                
                <StackLayout Spacing="10">
                    <Label Text="Location Status"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <Label Text="{Binding LocationSharingStatus}"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                </StackLayout>
            </Frame>

            <!-- Action Buttons Section -->
            <StackLayout Grid.Row="2" Spacing="15">
                
                <Label Text="Quick Actions"
                       FontSize="18"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                
                <Button Text="ðŸ“ Share Location"
                        FontSize="16"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="15"
                        HeightRequest="50"
                        Command="{Binding ShareLocationCommand}" />
                
                <Button Text="ðŸ‘¥ Find Friends"
                        FontSize="16"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="{StaticResource Black}"
                        CornerRadius="15"
                        HeightRequest="50"
                        Command="{Binding FindFriendsCommand}" />
                
                <Button Text="ðŸ”„ Refresh"
                        FontSize="16"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                        TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                        CornerRadius="15"
                        HeightRequest="50"
                        Command="{Binding RefreshCommand}" />
            </StackLayout>

            <!-- Activity Section -->
            <Frame Grid.Row="3"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CornerRadius="15"
                   Padding="15"
                   HasShadow="False">
                
                <StackLayout Spacing="10">
                    <Label Text="Recent Activity"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                    
                    <CollectionView ItemsSource="{Binding RecentActivity}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodels:ActivityItem">
                                <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                                       CornerRadius="10"
                                       Margin="5"
                                       Padding="15"
                                       HasShadow="False">
                                    
                                    <StackLayout Spacing="5">
                                        <Label Text="{Binding Title}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
                                        <Label Text="{Binding Description}"
                                               FontSize="12"
                                               TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        
                        <!-- Empty State -->
                        <CollectionView.EmptyView>
                            <StackLayout Padding="20"
                                         HorizontalOptions="Center">
                                <Label Text="ðŸ“±"
                                       FontSize="48"
                                       HorizontalOptions="Center" />
                                <Label Text="No recent activity"
                                       FontSize="16"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                            </StackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </StackLayout>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage> 