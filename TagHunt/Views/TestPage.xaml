<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="TagHunt.Views.TestPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="Blue"
             Title="Test Page">

    <ScrollView VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand"
                Padding="40">
        
        <StackLayout Spacing="20">
            
            <Label Text="TEST PAGE - NAVIGATION WORKS!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
                   
            <Label Text="If you can see this, the navigation is working properly."
                   FontSize="16"
                   TextColor="White"
                   HorizontalOptions="Center" />
                   
            <Button Text="ðŸ” Test Authentication Persistence"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnTestAuthClicked" />
                    
            <Label x:Name="TestResultLabel"
                   Text=""
                   FontSize="14"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
                   
            <Button Text="Go Back to Login"
                    BackgroundColor="White"
                    TextColor="Blue"
                    CornerRadius="10"
                    FontSize="16"
                    FontAttributes="Bold"
                    Clicked="OnGoBackClicked" />
            
        </StackLayout>

    </ScrollView>

</ContentPage> 